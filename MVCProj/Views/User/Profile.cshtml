@model MVCProj.Models.UserProfileViewModel
@inject StackContext db 
@{
    ViewData["Title"] = "Profile";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


    <h1>Profile</h1>

    <div>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Username)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Username)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Score)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Score)
            </dd>
        </dl>
    </div>
    <br />


    <h4>Questions</h4>
    <hr />
    <table class="table">
        <thead>
            <tr>
                <th>
                    Title
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Questions)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Title)
                    </td>
                    <td>
                        <a asp-controller="Question" asp-action="Show" asp-route-id="@item.QuestionId">View Question</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>


    <h4>Answers</h4>
    <hr />
    <table class="table">
        <thead>
            <tr>
                <th>
                    Content
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Answers)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Content)
                    </td>
                    <td>
                        <a asp-controller="Question" asp-action="Show" asp-route-id="@item.QuestionId">View According Question</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>