@model IEnumerable<Question>

@{
    ViewData["Title"] = "All Questions";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>All Questions</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            @*<th>
                @Html.DisplayNameFor(model => model.Content)
            </th>*@
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            @*<td>
                @Html.DisplayFor(modelItem => item.Content)
            </td>*@
            <td>
                @*<a asp-action="Edit" asp-route-id="@item.QuestionId">Edit</a> |*@
                <a asp-action="Show" asp-route-id="@item.QuestionId">View Question</a>
                @*<a asp-action="Delete" asp-route-id="@item.QuestionId">Delete</a>*@
            </td>
        </tr>
}
    </tbody>
</table>
